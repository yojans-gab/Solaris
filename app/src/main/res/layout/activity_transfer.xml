<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitymenu.TransferActivity"
    android:background="@color/base_blue">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button3"
        android:layout_width="65dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="44dp"
        android:onClick="RegMenu"
        app:backgroundTint="#323c60"
        app:icon="@drawable/ic_back"
        app:iconGravity="textTop"
        app:iconPadding="-1dp"
        app:iconSize="35dp"
        app:iconTint="#ad832f"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#c4ad81"
        app:strokeColor="#ad832f"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:text="Transferencia"
        android:textAlignment="center"
        android:textColor="#ad832f"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tvBusqueda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="272dp"
        android:ems="10"
        android:hint="xxxxxx-xxxxx"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tvCantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:ems="10"
        android:hint="Q. 0.0"
        android:inputType="numberDecimal"
        android:textColor="#fff"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textUser" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/BtnBusqueda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="264dp"
        android:clickable="true"
        android:onClick="BusquedaUser"
        app:backgroundTint="#323c60"
        app:layout_constraintStart_toEndOf="@+id/tvBusqueda"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#c4ad81"
        app:srcCompat="@drawable/ic_buscar" />

    <TextView
        android:id="@+id/textUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="#ad832f"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBusqueda" />

    <Button
        android:id="@+id/BtnTransaccion"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginTop="56dp"
        android:onClick="TransferirSaldo"
        android:text="Transferir"
        android:textColor="@color/custom_secondary"
        android:textSize="20sp"
        app:backgroundTint="#FFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCantidad"
        app:rippleColor="#c4ad81"
        app:strokeColor="#ad832f"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Cuenta a depositar"
        android:textColor="#c4ad81"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tvBusqueda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="Monto a depositar"
        android:textColor="#c4ad81"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tvCantidad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>